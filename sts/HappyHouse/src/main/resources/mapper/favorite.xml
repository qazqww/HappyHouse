<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="com.ssafy.happyhouse.model.mapper.FavoriteMapper">

	<insert id="registerFavorite" parameterType="FavoriteDto">
		insert into favorite (userid, dongCode)
		values (#{userid}, #{dongCode})
	</insert>
	
	<select id="listFavorite" parameterType="string" resultType="map">
		select d.sidoname, d.gugunname, d.dongname, f.addtime
		from favorite f inner join dongcode d
		on f.dongcode = d.dongcode
		where userid = #{userid}
	</select>
	
	<delete id="deleteFavorite" parameterType="int">
		delete from favorite
		where favno = #{favno}
	</delete>

</mapper>